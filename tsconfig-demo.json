{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "sourceMap": true,
    "sourceRoot" : "/",
    "inlineSources": true,
    "noImplicitAny": false,
    "declaration": false,
    "noEmitOnError": false,
    "noEmitHelpers": true,
    "removeComments": true,
    "rootDir": "./",
    "target": "es5",
    "experimentalDecorators": true,
    "out": "out/javascripts/demo.js"
  },
  "files": [
    "src/typescript/demo/helpers/array-element.ts",
    "src/typescript/demo/helpers/widget.ts",
    "src/typescript/demo/app/boolean.ts",
    "src/typescript/demo/app/string.ts",
    "src/typescript/demo/app/array.ts",
    "src/typescript/demo/application.ts"
  ],
  "exclude": [
    ".",
    "node_modules",
    "jspm_packages",
    "test/**/*.spec.ts"
  ]
}
