{
  "compilerOptions": {
    "pretty": true,
    "noImplicitAny": false,
    "declaration": false,
    "noEmitOnError": false,
    "noEmitHelpers": true,
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "typeRoots": [
      "../out/javascripts",
      "../node_modules/@types"
    ],
    "types": [
      "mocha",
      "node",
      "assert",
      "chai",
      "sinon-chai",
      "jsdom",
      "sinon"
    ],
    "lib": ["ES2015"]
  }
}
